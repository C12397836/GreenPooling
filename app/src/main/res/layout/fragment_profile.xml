<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:fillViewport="true" >

        <RelativeLayout
            android:id="@+id/container"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >

            <android.support.v7.widget.CardView
                android:id="@+id/userInfoCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="true"
                app:cardCornerRadius="5dp"
                app:cardElevation="10dp"
                app:cardUseCompatPadding="true">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp">

                    <ImageView
                        android:id="@+id/userImage"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:padding="15dp" />

                    <TextView
                        android:id="@+id/name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_below="@+id/userImage"
                        android:hint="Name: "
                        android:inputType="text"
                        android:textSize="25sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/age"
                        android:textSize="14sp"
                        android:text="Age: "
                        android:layout_below="@+id/name"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/gender"
                        android:textSize="14sp"
                        android:text="Gender: "
                        android:layout_below="@+id/age"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/location"
                        android:textSize="14sp"
                        android:text="Location: "
                        android:layout_below="@+id/gender" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/email"
                        android:textSize="14sp"
                        android:text="Email: "
                        android:layout_below="@+id/location" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:textSize="14sp"
                        android:hint="0"
                        android:id="@+id/ageEdit"
                        android:layout_toRightOf="@+id/age"
                        android:layout_alignBaseline="@+id/age"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/genderEdit"
                        android:layout_toRightOf="@+id/gender"
                        android:layout_alignBaseline="@+id/gender"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/locationEdit"
                        android:hint="Location"
                        android:textSize="14sp"
                        android:layout_toRightOf="@+id/location"
                        android:layout_alignBaseline="@+id/location"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/emailEdit"
                        android:hint="Email"
                        android:textSize="14sp"
                        android:layout_toRightOf="@+id/email"
                        android:layout_alignBaseline="@+id/email"/>



                </RelativeLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/bioCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="true"
                app:cardCornerRadius="5dp"
                app:cardElevation="10dp"
                android:layout_below="@+id/userInfoCard"
                app:cardUseCompatPadding="true">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/bioTitle"
                        android:text="Bio"
                        android:textSize="20sp" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/bio"
                        android:layout_below="@+id/bioTitle"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:textSize="14sp" />


                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/prefCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="true"
                app:cardCornerRadius="5dp"
                app:cardElevation="10dp"
                android:layout_below="@+id/bioCard"
                app:cardUseCompatPadding="true">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/prefTitle"
                        android:text="Preferences"
                        android:textSize="20sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/prefTitle"
                        android:id="@+id/chattyPref"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/chattyPref"
                        android:id="@+id/smokingPref"/>


                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/carInfoCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="true"
                app:cardCornerRadius="5dp"
                app:cardElevation="10dp"
                android:layout_below="@+id/prefCard"
                app:cardUseCompatPadding="true">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/carDetailsTitle"
                        android:text="Car Info"
                        android:textSize="20sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/carDetailsTitle"
                        android:id="@+id/carMake"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/carMake"
                        android:layout_alignBaseline="@+id/carMake"
                        android:paddingLeft="2dp"
                        android:id="@+id/carModel"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/carSeat"
                        android:layout_below="@+id/carMake" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/carSeatText"
                        android:text="avaiable seats."
                        android:padding="2dp"
                        android:layout_toRightOf="@+id/carSeat"
                        android:layout_alignBaseline="@+id/carSeat"/>


                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <Button
                android:id="@+id/signout"
                android:text="Logout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/carInfoCard"
                />
        </RelativeLayout>

    </ScrollView>




    <android.support.design.widget.FloatingActionButton
        android:id="@+id/edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        app:fabSize="mini"
        app:backgroundTint="@color/wallet_holo_blue_light"
        app:srcCompat="@mipmap/ic_mode_edit_black_24dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="31dp"
        android:layout_marginEnd="31dp"
        android:layout_marginBottom="12dp"
        android:elevation="11dp"/>


</RelativeLayout>

