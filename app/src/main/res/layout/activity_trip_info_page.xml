<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:facebook="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <com.facebook.login.widget.ProfilePictureView
        android:id="@+id/userImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        facebook:preset_size="normal"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:padding="15dp"/>

    <TextView
        android:id="@+id/userName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Paul Good"
        android:layout_toRightOf="@+id/userImage"/>

    <TextView
        android:id="@+id/leaving"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="20/20/20 - 15:30"
        android:layout_below="@+id/userImage"/>

    <TextView
        android:id="@+id/origin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dublin"
        android:layout_below="@+id/leaving"/>

    <TextView
        android:id="@+id/destination"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Belfast"
        android:layout_below="@+id/origin"/>

    <TextView
        android:id="@+id/availableSeats"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2 seats available"
        android:layout_below="@+id/destination"/>

    <TextView
        android:id="@+id/detour"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Detour: Far"
        android:layout_below="@+id/availableSeats"/>

    <TextView
        android:id="@+id/returning"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Return: 25/2/16 - 13:05"
        android:layout_below="@+id/detour"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/submit"
        android:text="Request Lift"
        android:layout_below="@id/returning"/>



</RelativeLayout>